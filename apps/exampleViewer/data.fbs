namespace ospray.data;

table Origin {
  0: double;
  1: double;
  2: double;
}

table Points {
  id: string;
  origin: Origin;
  radius: float;
  positions: [byte];
  colors: [byte];
}

table Mesh {
  id: string;
  trafo: [double:16];
  data: [byte];
  indices: [byte];
  stride: int;
  positionOffset: int;
  colorOffset: int;
  normalOffset: int;
}

table Camera {
  position: [double:3];
  lookat: [double:3];
  up: [double:3];
  fovX: float;
  fovY: float;
}
